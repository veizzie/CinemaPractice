@using Microsoft.AspNetCore.Identity
@using CinemaWeb.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="uk" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaWeb</title>

    <!-- Google Font Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

    <!-- Font Awesome 6 Free -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Стилі -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-secondary box-shadow mb-3">
            <div class="container-fluid">
                <!-- Логотип -->
                <a class="navbar-brand d-flex align-items-center fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-film me-2"></i> <!-- Безкоштовна іконка кіно -->
                    <span>CinemaWeb</span>
                </a>

                <!-- Кнопка для мобільної навігації -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- ЛІВА ЧАСТИНА МЕНЮ -->
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Головна з іконкою (без тексту на мобільних) -->
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index" title="Головна">
                                <i class="fas fa-home"></i> <!-- Безкоштовна іконка дому -->
                                <span class="d-none d-lg-inline ms-2">Головна</span>
                            </a>
                        </li>

                        <!-- Адмін панель -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link fw-bold" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-cog me-1"></i>
                                    <span>Адмін</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-tachometer-alt me-2"></i>Панель
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                            <i class="fas fa-users me-2"></i>Користувачі
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- ПРАВА ЧАСТИНА (Вхід / Реєстрація) -->
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName = currentUser?.FullName ?? User.Identity?.Name;

                            <!-- Іконка користувача -->
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center user-profile-link" asp-controller="Account" asp-action="Profile" title="Профіль">
                                    <i class="fas fa-user-circle user-icon me-2"></i> <!-- Безкоштовна іконка користувача -->
                                    <span class="d-none d-md-inline user-name">@displayName</span>
                                </a>
                            </li>

                            <!-- Кнопка виходу -->
                            <li class="nav-item ms-2 d-flex align-items-center">
                                <form class="form-inline d-flex align-items-center" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link d-flex align-items-center logout-btn">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span class="d-none d-md-inline ms-2">Вихід</span>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Реєстрація -->
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>
                                    <span>Реєстрація</span>
                                </a>
                            </li>

                            <!-- Вхід -->
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    <span>Вхід</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    &copy; 2026 - CinemaWeb
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>