@model CinemaWeb.Models.Movie

@{
    ViewData["Title"] = "Редагування";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">Редагувати фільм</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Title" class="control-label fw-bold mb-1">Назва</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="control-label fw-bold mb-1">Жанри</label>
                                <select name="genreIds" class="form-control" asp-items="ViewBag.GenreId" multiple style="height: 120px;"></select>
                            </div>

                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <label class="control-label fw-bold mb-2">Постер</label><br />
                                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                                    {
                                        <img src="@Model.PosterUrl" style="max-height: 150px;" class="rounded mb-2 shadow-sm" />
                                    }
                                    <input type="file" name="posterImage" class="form-control mt-2" accept="image/*" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Director" class="control-label fw-bold mb-1">Режисер</label>
                                <input asp-for="Director" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Cast" class="control-label fw-bold mb-1">Актори</label>
                                <input asp-for="Cast" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Duration" class="control-label fw-bold mb-1">Тривалість (хв)</label>
                                <input asp-for="Duration" class="form-control" type="number" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ReleaseDate" class="control-label fw-bold mb-1">Дата прем'єри</label>
                                <input asp-for="ReleaseDate" class="form-control" type="date" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Price" class="control-label fw-bold mb-1">Ціна (грн)</label>
                                <input asp-for="Price" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-bold mb-1">Опис</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-block mt-4">
                        <input type="submit" value="Зберегти" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}