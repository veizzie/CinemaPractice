@model CinemaWeb.Models.Movie

@{
    ViewData["Title"] = "Деталі фільму";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> @Model.Title</h3>
            @if (Model.IsArchived)
            {
                <span class="badge bg-warning text-dark shadow-sm">АРХІВ</span>
            }
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded shadow details-poster" />
                    }
                    else
                    {
                        <div class="details-poster d-flex align-items-center justify-content-center bg-secondary text-white rounded shadow">
                            <div class="text-center">
                                <i class="bi bi-camera-reels fs-1"></i><br />
                                <span>Постер відсутній</span>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-8">
                    <h4 class="text-primary border-bottom pb-2">Інформація про фільм</h4>

                    <dl class="row mt-3 fs-5">
                        <dt class="col-sm-3 text-muted">Режисер</dt>
                        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Director)</dd>

                        <dt class="col-sm-3 text-muted">Актори</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cast)</dd>

                        <dt class="col-sm-3 text-muted">Тривалість</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration) хв</dd>

                        <dt class="col-sm-3 text-muted">Прем'єра</dt>
                        <dd class="col-sm-9">@Model.ReleaseDate.ToString("d MMMM yyyy")</dd>

                        <dt class="col-sm-3 text-muted">Ціна квитка</dt>
                        <dd class="col-sm-9"><span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Price) грн</span></dd>

                        <dt class="col-sm-3 text-muted">Жанри</dt>
                        <dd class="col-sm-9">
                            @if (Model.Moviegenres != null && Model.Moviegenres.Any())
                            {
                                foreach (var mg in Model.Moviegenres)
                                {
                                    <span class="badge bg-secondary me-1">@mg.Genre.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Не вказано</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted">Опис</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer border-top-0 pb-3 pe-4 text-end">
            @if (!Model.IsArchived)
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning rounded-pill px-4">
                    <i class="bi bi-pencil"></i> Редагувати
                </a>
            }
            <a asp-action="Index" class="btn btn btn-outline-primary rounded-pill px-4 ms-2">
                <i class="bi bi-arrow-left"></i> Назад до списку
            </a>
        </div>
    </div>
</div>