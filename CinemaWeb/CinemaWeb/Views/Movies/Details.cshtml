@model CinemaWeb.Models.Movie

@{
    ViewData["Title"] = "Деталі фільму";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 500px;" />
                    }
                    else
                    {
                        <div class="alert alert-warning">Постер відсутній</div>
                    }
                </div>

                <div class="col-md-8">
                    <h4 class="text-primary border-bottom pb-2">Інформація про фільм</h4>

                    <dl class="row mt-3">
                        <dt class="col-sm-3 text-muted">Режисер</dt>
                        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Director)</dd>

                        <dt class="col-sm-3 text-muted">Актори</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cast)</dd>

                        <dt class="col-sm-3 text-muted">Тривалість</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration) хв</dd>

                        <dt class="col-sm-3 text-muted">Прем'єра</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ReleaseDate)</dd>

                        <dt class="col-sm-3 text-muted">Ціна квитка</dt>
                        <dd class="col-sm-9"><span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Price) грн</span></dd>

                        <dt class="col-sm-3 text-muted">Опис</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Редагувати</a>
            <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
        </div>
    </div>
</div>