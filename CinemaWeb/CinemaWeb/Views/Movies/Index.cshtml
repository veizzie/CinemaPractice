@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Фільми";
    // Отримуємо поточний статус для вибору в select
    var currentStatus = ViewData["StatusFilter"] as string ?? "all";
}

<link rel="stylesheet" href="~/css/movie-cards.css" asp-append-version="true" />

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-film"></i> Список фільмів</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Додати фільм
        </a>
    </div>

    <div class="card bg-dark text-white border-secondary mb-4 p-3 shadow-sm">
        <form asp-action="Index" method="get">
            <div class="row g-2 align-items-end">
                
                <div class="col-md-3">
                    <label class="form-label text-muted small">Пошук</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                           class="form-control bg-dark text-white border-secondary"
                           placeholder="Назва або режисер..." />
                </div>

                <div class="col-md-2">
                    <label class="form-label text-muted small">Жанр</label>
                    <select name="genreId" class="form-select bg-dark text-white border-secondary" asp-items="ViewBag.GenreId">
                        <option value="">-- Всі жанри --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label text-muted small">Статус</label>
                    <select name="statusFilter" class="form-select bg-dark text-white border-secondary">
                        <!option value="all" @(currentStatus == "all" ? "selected" : "")>Всі фільми</!option>
                        <!option value="active" @(currentStatus == "active" ? "selected" : "")>Тільки активні</!option>
                        <!option value="archived" @(currentStatus == "archived" ? "selected" : "")>Тільки архів</!option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div class="row g-1">
                        <div class="col-6">
                            <label class="form-label text-muted small">Ціна від</label>
                            <input type="number" step="0.01" name="minPrice" value="@ViewData["MinPrice"]"
                                   class="form-control bg-dark text-white border-secondary" placeholder="0" />
                        </div>
                        <div class="col-6">
                            <label class="form-label text-muted small">до</label>
                            <input type="number" step="0.01" name="maxPrice" value="@ViewData["MaxPrice"]"
                                   class="form-control bg-dark text-white border-secondary" placeholder="Max" />
                        </div>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning w-100" title="Застосувати">
                            <i class="bi bi-funnel"></i>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-50" title="Скинути">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 row-cols-xl-5 g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="text-muted opacity-50 display-1"><i class="bi bi-emoji-frown"></i></div>
                <p class="text-muted fs-4 mt-3">Фільмів за вашим запитом не знайдено</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 bg-dark text-white movie-card shadow-sm @(item.IsArchived ? "movie-card-archived" : "")">

                        <div class="position-relative overflow-hidden rounded-top">
                            @if (item.IsArchived)
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center"
                                     style="background: rgba(0,0,0,0.4); z-index: 20;">
                                    <span class="badge bg-secondary fs-4 shadow border border-white">АРХІВ</span>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.PosterUrl))
                            {
                                <img src="@item.PosterUrl" class="card-img-top movie-poster" alt="@item.Title">
                            }
                            else
                            {
                                <div class="d-flex justify-content-center align-items-center bg-secondary text-white movie-poster">
                                    <i class="bi bi-camera-reels fs-1"></i>
                                </div>
                            }

                            <span class="badge bg-success movie-price-badge">
                                @item.Price.ToString("N2") грн
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-truncate" title="@item.Title">@item.Title</h5>

                            <p class="card-text small text-muted mb-2">
                                <i class="bi bi-person-video3 text-warning"></i> @item.Director
                            </p>

                            <div class="mb-3">
                                @if (item.Moviegenres != null && item.Moviegenres.Any())
                                {
                                    @foreach (var mg in item.Moviegenres.Take(3))
                                    {
                                        <span class="badge bg-secondary border border-secondary text-light me-1 mb-1" style="font-weight: normal;">
                                            @mg.Genre.Name
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">Жанри не вказано</span>
                                }
                            </div>

                            <div class="mt-auto pt-3 border-top border-secondary">
                                <div class="d-flex gap-2">
                                    @if (!item.IsArchived)
                                    {
                                        <div class="btn-group w-100" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Редагувати">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Деталі">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="В архів">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary w-50" title="Інформація">
                                            <i class="bi bi-eye"></i> Інфо
                                        </a>

                                        <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="w-50">
                                            <button type="submit" class="btn btn-sm btn-success w-100" title="Відновити з архіву">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>