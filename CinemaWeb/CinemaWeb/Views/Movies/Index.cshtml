@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Фільми";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Список фільмів</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Додати фільм
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Постер</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Director)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th class="text-end pe-4">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            @if (!string.IsNullOrEmpty(item.PosterUrl))
                            {
                                <img src="@item.PosterUrl" alt="@item.Title" class="rounded shadow-sm" style="width: 60px; height: 90px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center text-muted" style="width: 60px; height: 90px; border: 1px solid #dee2e6;">
                                    <small>N/A</small>
                                </div>
                            }
                        </td>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Director)
                        </td>
                        <td>
                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Price) грн</span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Деталі</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>