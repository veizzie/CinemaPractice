@model CinemaWeb.Models.Movie

@{
    ViewData["Title"] = "Архівування";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-archive"></i> Архівування фільму</h4>
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
            </div>
            <div class="card-body">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-x-circle-fill fs-4 me-2"></i>
                        <div>
                            <strong>Операція заборонена!</strong><br />
                            @ViewBag.ErrorMessage
                        </div>
                    </div>
                }
                else
                {
                    <h5 class="card-title text-danger text-center mb-3">Ви впевнені, що хочете перемістити цей фільм в архів?</h5>
                    <div class="alert alert-warning text-center border-warning">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Фільм буде приховано зі списків.<br />
                            Майбутні сеанси <strong>без квитків</strong> будуть видалені.<br />
                            Історія минулих показів та статистика збережеться.
                        </small>
                    </div>
                }

                <hr />

                <div class="row align-items-center">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.PosterUrl))
                        {
                            <img src="@Model.PosterUrl" class="img-fluid rounded shadow-sm" style="max-height: 250px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center bg-secondary text-white rounded" style="height: 200px;">
                                <i class="bi bi-camera-reels fs-1"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row fs-5">
                            <dt class="col-sm-4 text-muted">Назва</dt>
                            <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-4 text-muted">Режисер</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Director)</dd>

                            <dt class="col-sm-4 text-muted">Ціна</dt>
                            <dd class="col-sm-8 text-success">@Html.DisplayFor(model => model.Price) грн</dd>

                            <dt class="col-sm-4 text-muted">Жанри</dt>
                            <dd class="col-sm-8">
                                @if (Model.Moviegenres != null && Model.Moviegenres.Any())
                                {
                                    foreach (var mg in Model.Moviegenres)
                                    {
                                        <span class="badge bg-secondary me-1">@mg.Genre.Name</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-4 text-end">
                    <input type="hidden" asp-for="Id" />

                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Скасувати
                    </a>

                    @if (ViewBag.ErrorMessage == null)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-archive-fill"></i> Так, архівувати
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>
</div>