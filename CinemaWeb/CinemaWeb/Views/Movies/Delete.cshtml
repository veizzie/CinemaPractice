@model CinemaWeb.Models.Movie

@{
    ViewData["Title"] = "Видалення";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Видалення фільму</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title text-danger text-center">Ви впевнені, що хочете видалити цей фільм?</h5>
                <p class="card-text text-center text-muted">Цю дію неможливо скасувати.</p>
                <hr />

                <div class="row">
                    <div class="col-md-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.PosterUrl))
                        {
                            <img src="@Model.PosterUrl" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                        }
                    </div>
                    <div class="col-md-9">
                        <dl class="row">
                            <dt class="col-sm-4">Назва</dt>
                            <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Title)</dd>

                            <dt class="col-sm-4">Режисер</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Director)</dd>

                            <dt class="col-sm-4">Ціна</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price) грн</dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" class="mt-3 text-end">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Так, видалити" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Ні, скасувати</a>
                </form>
            </div>
        </div>
    </div>
</div>