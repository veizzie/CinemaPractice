@model IEnumerable<CinemaWeb.Models.User>

@{
    ViewData["Title"] = "Користувачі";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Керування користувачами</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">Email</th>
                    <th>Повне ім'я</th>
                    <th>Роль</th>
                    <th class="text-end pe-4">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @{
                                string roleName = item.Role == "Admin" ? "Адміністратор" : "Користувач";
                                string roleClass = item.Role == "Admin" ? "bg-danger" : "bg-secondary";
                            }
                            <span class="badge @roleClass">
                                @roleName
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    Редагувати роль
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>