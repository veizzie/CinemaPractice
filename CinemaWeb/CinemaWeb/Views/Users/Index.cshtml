@model IEnumerable<CinemaWeb.Models.User>

@{
    ViewData["Title"] = "Користувачі";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Керування користувачами</h1>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-light border-secondary">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" id="userSearchInput" class="form-control border-secondary"
                       placeholder="Пошук за Email або ім'ям..." onkeyup="filterUsers()">
                <button class="btn btn-outline-secondary" type="button" onclick="clearUserSearch()">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0" id="usersTable">
                <thead>
                    <tr>
                        <th class="ps-4">Email</th>
                        <th>Повне ім'я</th>
                        <th>Роль</th>
                        <th class="text-end pe-4">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 align-middle fw-bold">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="align-middle">
                                @{
                                    string roleName = item.Role == "Admin" ? "Адміністратор" : "Користувач";
                                    string roleClass = item.Role == "Admin" ? "bg-danger" : "bg-secondary";
                                }
                                <span class="badge @roleClass">
                                    @roleName
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        Редагувати роль
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="noResults" class="text-center py-5 text-muted" style="display: none;">
                <i class="bi bi-person-x fs-1 d-block mb-2 opacity-50"></i>
                <span>Користувачів за вашим запитом не знайдено</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user-search.js" asp-append-version="true"></script>
}