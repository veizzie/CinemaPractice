@model CinemaWeb.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Особистий кабінет";
}

<div class="container mt-4">
    <h2><i class="bi bi-person-circle text-primary"></i> Особистий кабінет</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light fw-bold">Мій профіль</div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Повне ім'я:</small>
                        <h5 class="fw-bold text-dark">@Model.FullName</h5>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted d-block">Email:</small>
                        <p class="mb-1">@Model.Email</p>

                        @if (Model.IsEmailConfirmed)
                        {
                            <span class="badge bg-success">✓ Підтверджено</span>
                        }
                        else
                        {
                            <span class="badge bg-danger mb-2">✕ Не підтверджено</span>
                            <form asp-action="ConfirmEmail" method="post">
                                <button type="submit" class="btn btn-outline-success btn-sm w-100">Підтвердити Email</button>
                            </form>
                        }
                    </div>

                    <div class="mt-3">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">Роль: Адміністратор</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Роль: Користувач</span>
                        }
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark fw-bold">Зміна пароля</div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                        <input type="hidden" asp-for="FullName" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-2">
                            <label asp-for="CurrentPassword" class="form-label small text-muted">Поточний пароль</label>
                            <input asp-for="CurrentPassword" class="form-control form-control-sm" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="NewPassword" class="form-label small text-muted">Новий пароль</label>
                            <input asp-for="NewPassword" class="form-control form-control-sm" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label small text-muted">Ще раз новий</label>
                            <input asp-for="ConfirmNewPassword" class="form-control form-control-sm" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-sm">Оновити пароль</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">

            <div class="card shadow-sm border-success mb-5">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-ticket-perforated"></i> Активні бронювання</h5>
                    @if (Model.ActiveTickets.Any())
                    {
                        <span class="badge bg-white text-success">@Model.ActiveTickets.Count</span>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.ActiveTickets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Фільм</th>
                                        <th>Дата та час</th>
                                        <th>Зал</th>
                                        <th>Місце</th>
                                        <th>Ціна</th>
                                        <th>Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ActiveTickets)
                                    {
                                        <tr>
                                            <td class="ps-3 fw-bold">
                                                <img src="@item.Session.Movie.PosterUrl" alt="poster"
                                                     style="width: 40px; height: 60px; object-fit: cover;" class="rounded me-2">
                                                @item.Session.Movie.Title
                                            </td>
                                            <td>
                                                <div class="fw-bold">@item.Session.StartTime.ToString("dd.MM.yyyy")</div>
                                                <div class="small text-muted">@item.Session.StartTime.ToString("HH:mm")</div>
                                            </td>
                                            <td>@item.Session.Hall.Name</td>
                                            <td>
                                                <span class="badge bg-info text-dark">
                                                    Ряд @item.Seat.Row, Місце @item.Seat.Number
                                                </span>
                                            </td>
                                            <td class="fw-bold text-success">@item.Session.Movie.Price грн</td>
                                            <td>
                                                <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-x-circle"></i> Скасувати
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="text-muted mb-3 fs-5">У вас поки немає активних квитків.</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                                Обрати фільм
                            </a>
                        </div>
                    }
                </div>
            </div>

            @if (Model.HistoryTickets.Any())
            {
                <div class="card shadow-sm border-secondary">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Історія переглядів</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0 text-muted">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Фільм</th>
                                        <th>Дата та час</th>
                                        <th>Зал</th>
                                        <th>Місце</th>
                                        <th>Ціна</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.HistoryTickets)
                                    {
                                        <tr>
                                            <td class="ps-3">@item.Session.Movie.Title</td>
                                            <td>@item.Session.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@item.Session.Hall.Name</td>
                                            <td>Ряд @item.Seat.Row, Місце @item.Seat.Number</td>
                                            <td>@item.Session.Movie.Price грн</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}