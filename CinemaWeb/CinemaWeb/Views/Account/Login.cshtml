@model LoginViewModel

<h2>Вхід у систему</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" placeholder="Введіть пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                    Запам'ятати мене
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>

            <div class="mt-3">
                <p>
                    Ще не маєте акаунту? <a asp-action="Register">Зареєструватися</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}