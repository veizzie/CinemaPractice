@model CinemaWeb.Models.Ticket

@{
    ViewData["Title"] = "Скасування квитка";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Скасування бронювання
                    </h4>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <p class="lead fw-normal text-muted">Ви впевнені, що хочете повернути цей квиток?</p>
                    </div>

                    <div class="card border mb-4">
                        <div class="row g-0">
                            <div class="col-4">
                                <img src="@Model.Session.Movie.PosterUrl" class="img-fluid rounded-start h-100"
                                     style="object-fit: cover; min-height: 160px;" alt="@Model.Session.Movie.Title">
                            </div>
                            <div class="col-8">
                                <div class="card-body py-2">
                                    <h5 class="card-title fw-bold">@Model.Session.Movie.Title</h5>

                                    <p class="card-text mb-1">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                        @Model.Session.StartTime.ToString("dd MMMM yyyy")
                                    </p>
                                    <p class="card-text mb-1">
                                        <i class="bi bi-clock text-primary"></i>
                                        @Model.Session.StartTime.ToString("HH:mm")
                                    </p>
                                    <p class="card-text mb-1">
                                        <i class="bi bi-geo-alt-fill text-danger"></i>
                                        @Model.Session.Hall.Name
                                    </p>
                                    <hr class="my-2">
                                    <p class="card-text fw-bold text-success mb-0">
                                        Ряд @Model.Seat.Row, Місце @Model.Seat.Number
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill flex-shrink-0 me-2"></i>
                        <div class="small">
                            Ця дія є незворотною. Місце стане доступним для інших користувачів одразу після підтвердження.
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2 mt-4">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg">
                            Так, скасувати квиток
                        </button>

                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary">
                            Ні, залишити як є
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>