@model IEnumerable<CinemaWeb.Models.Ticket>

@{
    ViewData["Title"] = "Всі квитки (Адмін)";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-lock-fill text-danger"></i> Управління квитками</h2>
        <span class="badge bg-dark">Всього продано: @Model.Count()</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Користувач</th>
                            <th>Фільм</th>
                            <th>Сеанс</th>
                            <th>Місце</th>
                            <th>Ціна</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <div class="fw-bold">@item.User.FullName</div>
                                    <small class="text-muted">@item.User.Email</small>
                                </td>
                                <td>
                                    @if (item.Session?.Movie != null)
                                    {
                                        <img src="@item.Session.Movie.PosterUrl" style="width: 30px; height: 45px; object-fit: cover;" class="rounded me-1">
                                        @item.Session.Movie.Title
                                    }
                                </td>
                                <td>
                                    @if (item.Session != null)
                                    {
                                        <div>@item.Session.StartTime.ToString("dd.MM.yyyy")</div>
                                        <small class="text-muted">@item.Session.StartTime.ToString("HH:mm")</small>
                                    }
                                </td>
                                <td>
                                    @if (item.Session?.Hall != null && item.Seat != null)
                                    {
                                        <div>@item.Session.Hall.Name</div>
                                        <small class="text-muted">Ряд @item.Seat.Row, Місце @item.Seat.Number</small>
                                    }
                                </td>
                                <td class="fw-bold text-success">
                                    @(item.Session?.Movie?.Price ?? 0) грн
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    Квитків ще не продано.
                </div>
            }
        </div>
    </div>
</div>