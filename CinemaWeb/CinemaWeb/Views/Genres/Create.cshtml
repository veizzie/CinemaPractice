@model CinemaWeb.Models.Genre

@{
    ViewData["Title"] = "Створити жанр";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Створити новий жанр</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold mb-1">Назва жанру</label>
                        <input asp-for="Name" class="form-control" placeholder="Введіть назву..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-block mt-4">
                        <input type="submit" value="Створити" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}