@model IEnumerable<CinemaWeb.Models.Genre>

@{
    ViewData["Title"] = "Жанри";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Список жанрів</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати жанр
        </a>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-light border-secondary">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control border-secondary"
                       placeholder="Пошук жанрів..." onkeyup="filterGenres()">
                <button class="btn btn-outline-secondary" type="button" onclick="clearSearch()">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-secondary">
        <div class="card-body p-0">
            <table class="table table-hover mb-0" id="genresTable">
                <thead>
                    <tr>
                        <th class="ps-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-end pe-4">Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 align-middle fw-bold genre-name">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Деталі</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="noResults" class="text-center py-5 text-muted" style="display: none;">
                <i class="bi bi-search fs-1 d-block mb-2 opacity-50"></i>
                <span>За вашим запитом нічого не знайдено</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/genre-search.js" asp-append-version="true"></script>
}