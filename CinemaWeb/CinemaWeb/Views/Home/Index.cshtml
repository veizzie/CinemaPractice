@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Афіша";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Зараз у кіно</h1>
    <p class="lead text-muted">Актуальні сеанси</p>
</div>

<div class="row">
    @foreach (var movie in Model)
    {
        var nearestSession = movie.Sessions?
        .Where(s => s.StartTime > DateTime.Now)
        .OrderBy(s => s.StartTime)
        .FirstOrDefault();

        <div class="col-md-3 col-sm-6 mb-4">
            <div class="movie-card-container">
                <div class="poster-wrapper">
                    <img src="@movie.PosterUrl" class="movie-poster" alt="@movie.Title">
                </div>

                <div class="movie-overlay">
                    <div class="overlay-inner">
                        <h3 class="overlay-title-center">@movie.Title</h3>

                        <div class="session-section mt-3">
                            <p class="session-label-large mb-2">Найближчий сеанс:</p>
                            @if (nearestSession != null)
                            {
                                <div class="session-badge-container d-inline-flex align-items-center gap-3">
                                    <span class="session-time-text">@nearestSession.StartTime.ToString("HH:mm")</span>
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id"
                                       class="btn buy-btn-blue">
                                        Купити
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-5 mb-5">
    <hr />
    <p class="text-muted">Не знайшли те, що шукали?</p>
    <a asp-action="AllMovies" class="btn btn-outline-secondary btn-lg">
        Переглянути архів усіх фільмів
    </a>
</div>