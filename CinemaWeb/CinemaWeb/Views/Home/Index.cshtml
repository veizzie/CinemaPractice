@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Афіша";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">CinemaWeb</h1>
    <h3 class="lead text-muted">Топові фільми</h3>
</div>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title"
                     style="height: 400px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@movie.Title">@movie.Title</h5>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="badge bg-warning text-dark">@movie.ReleaseDate</span>
                        <span class="fw-bold text-primary">@movie.Price грн</span>
                    </div>

                    <div class="mt-auto">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                           class="btn btn-outline-dark w-100">Деталі</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>