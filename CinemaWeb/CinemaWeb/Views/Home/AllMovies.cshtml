@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Афіша";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Архів</h1>
    <p class="lead text-muted">Топові фільми</p>
</div>

<div class="row">
    @foreach (var movie in Model)
    {
        var nearestSession = movie.Sessions
        .Where(s => s.StartTime > DateTime.Now)
        .OrderBy(s => s.StartTime)
        .FirstOrDefault();

        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card h-100 shadow-sm border-0">

                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title"
                     style="height: 400px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@movie.Title">@movie.Title</h5>

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-light text-dark border">@movie.ReleaseDate.Year</span>
                        <span class="fw-bold text-primary">@movie.Price грн</span>
                    </div>

                    @if (nearestSession != null)
                    {
                        <div class="alert alert-success py-1 px-2 mb-3 text-center small">
                            <i class="bi bi-clock"></i> Найближчий сеанс:<br />
                            <strong>@nearestSession.StartTime.ToString("d MMMM HH:mm")</strong>
                        </div>
                    }

                    <div class="mt-auto">
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                           class="btn btn-primary w-100">
                            Квитки та Розклад
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-5 mb-5">
    <hr />
    <p class="text-muted">Хочете повернутися?</p>
    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
        Переглянути актуальні сеанси
    </a>
</div>