@model IEnumerable<CinemaWeb.Models.Movie>

@{
    ViewData["Title"] = "Афіша";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Архів</h1>
    <p class="lead text-muted">Топові фільми</p>
</div>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none">
                <div class="archive-card-container">
                    <div class="archive-poster-wrapper">
                        <img src="@movie.PosterUrl" class="archive-movie-poster" alt="@movie.Title">
                    </div>

                    <div class="archive-movie-overlay">
                        <div class="d-flex flex-column justify-content-center align-items-center h-100 text-center">
                            <h3 class="archive-title">@movie.Title</h3>
                            <div class="archive-year-badge">@movie.ReleaseDate.Year</div>

                            <div class="mt-3 small text-white-50">Дивитися деталі</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="text-center mt-5 mb-5">
    <hr />
    <p class="text-muted">Хочете повернутися?</p>
    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
        Переглянути актуальні сеанси
    </a>
</div>