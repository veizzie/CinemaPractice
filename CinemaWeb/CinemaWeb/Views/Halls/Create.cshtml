@model CinemaWeb.Models.Hall

@{
    ViewData["Title"] = "Створити зал";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Створити новий зал</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold mb-1">Назва залу</label>
                        <input asp-for="Name" class="form-control" placeholder="Наприклад: Червоний зал" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Capacity" class="control-label fw-bold mb-1">Місткість (кількість місць)</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-block mt-4">
                        <input type="submit" value="Створити" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}