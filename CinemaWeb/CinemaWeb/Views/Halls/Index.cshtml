@model IEnumerable<CinemaWeb.Models.Hall>

@{
    ViewData["Title"] = "Зали";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Список залів</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Додати зал
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead>
                <tr>
                    <th class="ps-4">@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                    <th class="text-end pe-4">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Додаємо клас для архівних рядків
                    <tr class="@(item.IsArchived ? "bg-light text-muted" : "")">
                        <td class="ps-4 fw-bold">
                            @Html.DisplayFor(modelItem => item.Name)

                            @if (item.IsArchived)
                            {
                                <span class="badge bg-secondary ms-2">АРХІВ</span>
                            }
                        </td>
                        <td>
                            <span class="badge @(item.IsArchived ? "bg-secondary" : "bg-info text-dark")">
                                @item.Capacity місць
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                @if (!item.IsArchived)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Деталі</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Архівувати</a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i> Перегляд
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>