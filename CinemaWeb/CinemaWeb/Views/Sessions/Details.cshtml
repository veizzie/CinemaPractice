@model CinemaWeb.Models.Session

@{
    ViewData["Title"] = "Деталі сеансу";
    var takenSeats = ViewBag.TakenSeats as List<int> ?? new List<int>();
}

<div class="container mt-4">

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Інформація про сеанс</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Назва фільму</dt>
                <dd class="col-sm-9 fw-bold">@Model.Movie.Title</dd>

                <dt class="col-sm-3">Назва залу</dt>
                <dd class="col-sm-9">@Model.Hall.Name</dd>

                <dt class="col-sm-3">Час початку</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Продано квитків</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@takenSeats.Count</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
            <a asp-action="Index" class="btn btn-secondary">Назад до розкладу</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-center text-muted">Карта заповненості залу</h5>
        </div>
        <div class="card-body d-flex flex-column align-items-center bg-white">

            <div class="screen mb-4">ЕКРАН</div>

            <div class="d-flex flex-column gap-2">
                @for (byte r = 1; r <= Model.Hall.RowsCount; r++)
                {
                    <div class="d-flex align-items-center">

                        <div class="row-label me-3">Ряд @r</div>

                        <div class="d-flex gap-1">
                            @for (byte c = 1; c <= Model.Hall.ColsCount; c++)
                            {
                                var seat = Model.Hall.Seats.FirstOrDefault(s => s.Row == r && s.Number == c);

                                if (seat == null)
                                {
                                    <div class="seat-gap"></div>
                                    // Прохід
                                }
                                else
                                {
                                    bool isTaken = takenSeats.Contains(seat.Id);
                                    string seatClass = isTaken ? "seat taken" : "seat available";
                                    string titleText = isTaken ? $"Ряд {r}, Місце {c} (Продано)" : $"Ряд {r}, Місце {c} (Вільно)";

                                    <div class="@seatClass" title="@titleText">
                                        @c
                                    </div>
                                }
                            }
                        </div>

                        <div class="row-label ms-3">@r</div>
                    </div>
                }
            </div>

            <div class="d-flex gap-4 mt-4 text-small text-muted">
                <div class="d-flex align-items-center gap-1"><div class="seat available sm"></div> — Вільно</div>
                <div class="d-flex align-items-center gap-1"><div class="seat taken sm"></div> — Продано</div>
            </div>

        </div>
    </div>
</div>

<style>
    /* Стилі для підпису ряду */
    .row-label {
        font-weight: bold;
        color: #666;
        min-width: 50px; /* Фіксована ширина, щоб ряди були рівними */
        text-align: right; /* Текст притиснутий до сидінь */
        font-size: 14px;
    }

    /* Екран */
    .screen {
        width: 60%;
        height: 30px;
        background: #e0e0e0;
        border-radius: 0 0 50px 50px;
        text-align: center;
        line-height: 30px;
        color: #999;
        font-size: 12px;
        letter-spacing: 2px;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }

    /* Квадратики місць */
    .seat {
        width: 30px;
        height: 30px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 11px;
        font-weight: bold;
        cursor: default; /* Курсор звичайний, бо клікати не треба */
    }

        .seat.sm {
            width: 20px;
            height: 20px;
            font-size: 0;
        }

    .seat-gap {
        width: 30px;
        height: 30px;
    }

    /* Кольори */
    .seat.available {
        background-color: #d4edda; /* Світло-зелений */
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .seat.taken {
        background-color: #6c757d; /* Сірий */
        border: 1px solid #545b62;
        color: #fff;
    }
</style>