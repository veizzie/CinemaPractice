@model IEnumerable<CinemaWeb.Models.Session>

@{
    ViewData["Title"] = "Сеанси";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Розклад сеансів</h1>
    <div>
        <a asp-action="CreateGroup" class="btn btn-primary me-2">
            <i class="bi bi-collection-play"></i> Групове створення
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати один сеанс
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-x-circle-fill"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">
                        @Html.DisplayNameFor(model => model.Movie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hall)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartTime)
                    </th>
                    <th class="text-end pe-4">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 align-middle fw-bold">
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                        <td class="align-middle">
                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Hall.Name)</span>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Деталі</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>