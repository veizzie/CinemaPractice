@model CinemaWeb.Models.Session

@{
    ViewData["Title"] = "Редагування";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">Редагувати сеанс</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="MovieId" class="control-label fw-bold mb-1">Фільм</label>
                        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                        <span asp-validation-for="MovieId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="HallId" class="control-label fw-bold mb-1">Зал</label>
                        <select asp-for="HallId" class="form-control" asp-items="ViewBag.HallId"></select>
                        <span asp-validation-for="HallId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="StartTime" class="control-label fw-bold mb-1">Час початку</label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-block mt-4">
                        <input type="submit" value="Зберегти" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}